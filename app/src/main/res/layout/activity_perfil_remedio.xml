<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remedio: "
        android:layout_marginTop="40dp"
        android:id="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="New Text"
        android:layout_marginLeft="90dp"
        android:id="@+id/txtRemedio"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fabricante: "
        android:id="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginLeft="90dp"
        android:id="@+id/txtFabricante"
        android:layout_alignTop="@+id/textView3"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstComponente"
        android:layout_below="@+id/txtFabricante"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Componentes: "
        android:id="@+id/textView5"
        android:layout_below="@+id/txtFabricante"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso(mg): "
        android:id="@+id/textView6"
        android:layout_below="@+id/txtFabricante"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp" />


</RelativeLayout>