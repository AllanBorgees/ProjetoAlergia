<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mpoo.ufrpe.projetoalergia.gui.CadastroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tirar foto"
        android:layout_weight="1"
        android:onClick="tirarFoto" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd" />


    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:id="@+id/edtNomePessoa"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:singleLine="true"
        android:layout_below="@id/edtNomePessoa"
        android:layout_marginTop="10dp"
        android:id="@+id/edtCpf"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data De Nascimento"
        android:singleLine="true"
        android:layout_below="@+id/edtCpf"
        android:layout_marginTop="10dp"
        android:id="@+id/edtDataDeNascimentoCadastro"

        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtDataDeNascimentoCadastro"
        android:singleLine="true"
        android:id="@+id/edtLoginCadastro"
        android:layout_marginTop="20dp"
        android:hint="Login"/>



    <EditText
        android:layout_width="match_parent"
        android:password="true"
        android:layout_height="wrap_content"
        android:id="@+id/edtSenhaCadastro"
        android:singleLine="true"
        android:layout_below="@id/edtLoginCadastro"
        android:layout_marginTop="20dp"
        android:hint="Senha"/>

    <EditText
        android:layout_width="match_parent"
        android:password="true"
        android:layout_height="wrap_content"
        android:id="@+id/edtConfirmarSenhaCadastro"
        android:singleLine="true"
        android:layout_below="@id/edtSenhaCadastro"
        android:layout_marginTop="20dp"
        android:hint="Repita a senha"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtConfirmarSenhaCadastro"
        android:hint="Cadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCadastrarCadastro"/>




</RelativeLayout>
